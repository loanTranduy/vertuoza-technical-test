{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-duplicate-enum-values": "warn",
    "react/jsx-key": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 1
      }
    ],
    "no-console": [
      "error"
    ],
    "semi": [
      "error",
      "always"
    ],
    "import/order": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "no-unused-vars": "warn"
  },
  "overrides": [
    {
      "files": [
        "*.tsx"
      ],
      "rules": {
        "max-lines": [
          "error",
          200
        ]
      }
    },
    {
      "files": [
        "resolvers.ts"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "warn"
      }
    }
  ]
}

